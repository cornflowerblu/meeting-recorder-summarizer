# Example Terraform Variables
# Copy this file to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Project Configuration
project_name = "meeting-recorder"

# DynamoDB Configuration
enable_point_in_time_recovery = true
# Use customer-managed KMS key for production (better security, audit trails, key rotation control)
# Set to true for production environments, false for dev/staging to use AWS-managed keys
use_customer_managed_kms = false

# S3 Configuration
s3_versioning_enabled = true
s3_lifecycle_days     = 90

# Firebase Configuration
# Get this from your Firebase project settings
firebase_project_id = "your-firebase-project-id"

# Monitoring and Alerting (Added per AWS Architecture Audit)
# Email address for cost anomaly alerts and operational notifications
# Leave empty to disable email notifications
alert_email = "your-email@example.com"

# Monthly budget limit in USD for cost monitoring
# Alert will trigger at 80%, 90%, and 100% of this limit
monthly_budget_limit = 100

# Additional Tags (optional)
additional_tags = {
  Owner = "your-name"
  Team  = "your-team"
}
